#include "gpio.ceu"
#include "wclock.ceu"
#include "adc.ceu"

output on/off PIN_13;

spawn Adc();

loop do
    await 1s;
    var int v1 = _;
    var int v2 = _;
    par/and do
        v1 = await Adc_Conversion(_A0);
    with
        v2 = await Adc_Conversion(_A1);
    end
    if v1+v2 > 2000 then
        emit PIN_13(on);
    else
        emit PIN_13(off);
    end
end
