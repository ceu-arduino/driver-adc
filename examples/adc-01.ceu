// compile with CEU_DEFS=-DCEU_PM_MIN

#include "gpio.ceu"
#include "wclock.ceu"
#include "adc.ceu"

#define CHANNEL _A0

output high/low PIN_13;

emit ADC(on);
loop do
    await 1s;
    emit ADC_REQUEST(CHANNEL);
    await ADC_DONE;
    var int value = adc_channels[CHANNEL-_A0].value;
    emit PIN_13(value > 500);
end
